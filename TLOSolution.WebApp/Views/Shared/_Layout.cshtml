@model SearchBaseViewModel

@{
    var categories = Model.Categories;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/controller.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
</head>

<body>
    <div id="header">
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark flex">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="/image/logo.png" alt="">
            </a>
            <form class="search-main" asp-controller="Home" asp-action="Search" method="get">
                <div>
                    <select id="combobox99" onchange="return GetSelectedTextValue()">
                        <option value="">Danh mục</option>
                        @foreach (var item in categories)
                        {
                            if (item.Id == Model.CategoryId)
                            {
                                <option value="@item.Id" selected>@Model.CategoryTitle</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                        <input type="hidden" id="CategoryId" value="" name="CategoryId" />
                    </select>
                </div>

                <div class="search-menu">
                    <input class="search-input" type="text" placeholder="Search" name="InputString">
                    <button type="submit">
                        <i id="search-icon" class="fas fa-search"></i>
                    </button>
                </div>
            </form>
            <partial name="_LoginPartial" />
        </nav>
    </div>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <div id="footer">
        <div class="container">

            <div class="row">
                <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                    <img src="~/image/logo.png" class="img-responsive" alt="Image">
                    <hr />
                </div>
                <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                    <h3 class="h3">Giới thiệu</h3>

                </div>
                <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                    <h3 class="h3">Hỗ trợ</h3>
                    <ul class="footer-ul">
                        <li><a href="">support@xemtailieu.com</a></li>
                        <li><a href="">hotroxemtailieu</a></li>

                    </ul>
                </div>
                <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                    <h3 class="h3">Giúp đỡ</h3>
                    <ul class="footer-ul">
                        <li><a href="">Điều khoản sử dụng</a></li>
                        <li><a href="">Quy định duyệt tài liệu</a></li>
                        <li><a href="">Hướng dẫn upload tài liệu</a></li>
                    </ul>
                </div>
            </div>
            <p>
                Tài liệu online là thư viện tài liệu trực tuyến, nơi chia sẽ trao đổi tài liệu như luận văn đồ án, sách,
                giáo trình, đề thi, truyện đọc.v.v.. Với kho tài liệu khủng lên đến hàng triệu tài liệu tại Tài liệu
                online hy vọng đáp ứng được nhu cầu của các thành viên.
                Tài liệu online không chịu trách nhiệm liên quan đến các vấn đề bản quyền tài liệu được thành viên tự
                nguyện đăng tải lên.
            </p>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/create.js" asp-append-version="true"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>
