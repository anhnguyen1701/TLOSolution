@model SearchReponseViewModel
@{
    ViewData["Title"] = Model.InputString;
    var categories = Model.Categories;
    var posts = Model.Posts;
}

<main class="mt-73 main-bg">
    <div class="container">
        <p style="font-size: 25px;">Kết quả tìm kiếm với từ khóa "<strong>@Model.InputString</strong>"</p>

        <div class="bg-white p-3 row">
            <div class="col-3">
                <div class="actived">
                    <a href="#" class="row text-decoration-none actived pt-1 pb-1">
                        <i class="fas fa-search col-1 mt-1 menu-text actived"></i>
                        <span class="col-6 text-dark hover actived">Tài liệu</span>
                    </a>
                </div>
            </div>
            <div class="col-8">
                @foreach (var item in posts)
                {
                    <div class="item row mb-3">
                        <div class="col-2">
                            <a href="@Url.Action("Details", "Post", new { id = item.Id})">
                                <img src="@item.ImagePath" class="img-fluid">
                            </a>
                        </div>
                        <div class="col-10">
                            <a href="@Url.Action("Details", "Post", new { id = item.Id})" style="text-decoration: none; color: black; font-family: Roboto; font-size: 12px;">
                                <h4>@item.Title</h4>
                            </a>
                            <p class="description">
                                @item.Description
                            </p>
                            <div class="row col-5" style="font-size: 12px;">
                                <div class="text-muted col-4">
                                    <i class="fas fa-eye"></i>
                                    <small>@item.ViewCount</small>
                                </div>
                                <div class="text-muted col-4">
                                    <i class="fas fa-download"></i>
                                    <small>@item.DowloadCount</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <nav aria-label="Page navigation example" class="mt-5">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</main>
