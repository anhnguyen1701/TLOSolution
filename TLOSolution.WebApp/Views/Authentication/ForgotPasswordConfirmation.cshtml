
@{
    Layout = "_Layout2";
    ViewData["Title"] = "Quên mật khẩu";

}

<div class="forgot1__password" id="data__password--2">
    <div class="forgot1__text">
        <h3>Đã gửi đến Email!</h3>
        <p>Kiểm tra trong hộp thư của bạn và nhấn vào đường link trong mail</p>
        <div class="forgot1__icon" id="forgot__animation--1">
            <i class="fas fa-check-circle fa-2x"
               style="color:rgb(217, 255, 47);"></i>
        </div>
    </div>
    <div class="forgot1__image"><img src="https://static.thenounproject.com/png/2732925-200.png" alt=""></div>
    <div class="remember__password">
        <span>Email chưa nhận được thông báo?</span>
        <a href="@Url.Action("ForgotPassword", "Authentication")" id="login--1">Nhập lại email</a>
    </div>
</div>